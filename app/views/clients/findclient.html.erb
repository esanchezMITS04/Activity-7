		<%= form_tag "/clients/findclient" do %>
        <%= text_field_tag :search_client %>
        <%=submit_tag :search%>
        <%end%>
        <br/>
		
<table id = "workout">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clientsearch.each do |clientfind| %>
      <tr>
        <td><%= clientfind.Full_Name %></td>
        <td><%= clientfind.Address %></td>
        <td><%= link_to 'Show Full Profile', clientfind %></td>
        <td><%= link_to 'Edit Profile', edit_client_path(clientfind) %></td>
        <td><%= link_to 'Delete Profile', clientfind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>