    padding: 8px;
}

#workout tr:nth-child(even){background-color: #f2f2f2;}

#workout tr:hover {background-color: #ddd;}

#workout th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: center;
    background-color: #4CAF50;
    color: white;
}
